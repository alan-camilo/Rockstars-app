<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              app:layout_constraintBottom_toBottomOf="parent">

    <Button
            android:text="@string/rockstars"
            android:layout_width="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content" android:id="@+id/rockstars_btn" android:layout_weight="1"
            android:textColor="#3F51B5"/>
    <Button
            android:text="@string/bookmarks"
            android:layout_width="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content" android:id="@+id/bookmarks_btn" android:layout_weight="1"
            android:textColor="#3F51B5"/>
    <Button
            android:text="@string/profile"
            android:layout_width="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content" android:id="@+id/profile_btn" android:layout_weight="1"
            android:textColor="#3F51B5"/>
</LinearLayout>
